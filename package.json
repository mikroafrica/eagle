{
  "name": "mk-eagle",
  "version": "1.0.0",
  "description": "Eagle does heavy lifting for services, runs jobs, publish events at intervals etc.",
  "main": "lib/index.js",
  "scripts": {
    "test": "flow check && mocha -r @babel/register tests tests/unit/*",
    "integration-test": "flow check && mocha -r @babel/register --exit --timeout 30000 tests/integration/*",
    "build": "npm run build:lib && npm run build:flow",
    "build:lib": "babel src/ -d lib/",
    "build:flow": "flow-copy-source -v src/ lib/",
    "start": "node lib/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-format-staged -f 'prettier --stdin --stdin-filepath \"{}\"' '*.js' '*.jsx' '*.ts' '*.tsx' '*.css' '*.json' '*.gql'"
    }
  },
  "keywords": [
    "node",
    "js"
  ],
  "engines": {
    "node": "11.10.1"
  },
  "author": "Meshileya Seun (info@meshileyaseun.dev)",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-transform-async-to-generator": "^7.10.1",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-flow": "^7.10.1",
    "@babel/register": "^7.10.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "flow-bin": "^0.109.0",
    "flow-copy-source": "^2.0.8",
    "git-format-staged": "^2.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^6.2.3",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "async": "^3.2.0",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "events": "^3.1.0",
    "handlebars": "^4.7.6",
    "joi": "^14.3.1",
    "mikro-kafka-client": "https://github.com/meshboy/kafka-wrapper.git#master",
    "moment": "^2.27.0",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.17",
    "pg": "^8.2.1",
    "restify": "^8.5.1",
    "restify-clients": "^2.5.2",
    "tsscmp": "^1.0.6",
    "winston": "^3.2.1"
  }
}
